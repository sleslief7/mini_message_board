<div class="card">
  <div class="card-header">
    <h2><%= message.title %></h2>
  </div>
  <p class="user"><%= message.user %></p>
  <p class="text"><%= message.text %></p>
  <p class="date">Added: <%= message.added %></p>
  <a href="/message/<%= message.id %>">
    <button class="open-btn">Open</button>
  </a>
</div>
